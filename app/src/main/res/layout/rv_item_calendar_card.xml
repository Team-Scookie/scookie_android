<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rv_item_calendar_card">

    <androidx.cardview.widget.CardView
        android:layout_width="256dp"
        android:layout_height="388dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp">

        <!-- 카드 요소들을 감싸고 있는 ConstraintLayout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 요소 중 윗 부분을 차지하는 ConstraintLayout -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardView_top_constraint"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/cardView_bottom_constraint"
                android:background="@drawable/card_top_border">

                <ImageView
                    android:id="@+id/card_top_cardImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/colorAccent"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/card_top_month_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/card_top_date_tv"
                    app:layout_constraintBottom_toTopOf="@id/card_top_date_tv"
                    android:text="8"
                    android:textSize="48sp"
                    android:textColor="@color/colorGreyScale"
                    android:fontFamily="@font/nanumbarungothic_ultralight"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/card_top_month_tv"
                    app:layout_constraintBottom_toBottomOf="@id/card_top_month_tv"
                    android:layout_marginLeft="2dp"
                    android:text="월"
                    android:textSize="18sp"
                    android:fontFamily="@font/nanumbarungothic_regular"
                    android:textColor="@color/colorGreyScale"
                    android:layout_marginBottom="6dp"/>

                <!-- card_top_date_tv가 기준 -->
                <TextView
                    android:id="@+id/card_top_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="16dp"
                    android:text="21"
                    android:textSize="48sp"
                    android:textColor="@color/colorGreyScale"
                    android:fontFamily="@font/nanumbarungothic_ultralight"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/card_top_date_tv"
                    app:layout_constraintBottom_toBottomOf="@id/card_top_date_tv"
                    android:text="일"
                    android:textColor="@color/colorGreyScale"
                    android:fontFamily="@font/nanumbarungothic_regular"
                    android:textSize="18sp"
                    android:layout_marginBottom="6dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 요소 중 카드의 아래부분을 차지하는 ConstraintLayout -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardView_bottom_constraint"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@drawable/card_bottom_border"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/card_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/nanumbarungothic_regular"
                    android:text="이태원에서의 하루"
                    android:textSize="18sp"
                    android:textColor="@color/colorBlack2"/>

                <TextView
                    android:id="@+id/card_description_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/card_title_tv"
                    app:layout_constraintStart_toStartOf="@id/card_title_tv"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/nanumbarungothic_ultralight"
                    android:text="아무도 모르는 곳에 가고 싶었어요"
                    android:textSize="14sp"
                    android:textColor="@color/colorBlack2"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cookie_constraint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/card_description_tv"
                    app:layout_constraintStart_toStartOf="@id/card_description_tv"
                    android:layout_marginTop="8dp">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="@color/colorBeige"
                        android:layout_marginBottom="-2dp"/>

                    <TextView
                        android:id="@+id/card_bottom_cookie_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="10"
                        android:textColor="@color/colorBrown"
                        android:fontFamily="@font/nanumbarungothic_regular"
                        android:layout_marginLeft="4dp"/>

                    <TextView
                        android:id="@+id/card_bottom_cookie_txt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@id/card_bottom_cookie_num"
                        app:layout_constraintTop_toTopOf="@id/card_bottom_cookie_num"
                        android:text=" 쿠키"
                        android:textColor="@color/colorBrown"
                        android:fontFamily="@font/nanumbarungothic_regular"
                        android:paddingRight="4dp"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>